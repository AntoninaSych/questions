<h1> Questions </h1>

<%= @questions.each do |question| %>

<article class='card'>
    <div class='card-body'>
        <h2><%= question.title %></h2>

        <section class = 'card-text'>
         <small>  <time datetime="<%=question.formatted_created_at %>">   <%= question.formatted_created_at %></time></small>
            <div class='my-2'><%= question.body %>
            <br>
            <%= link_to 'Show', question_path(question), class:'btn btn-primary' %>
            <%= link_to 'Edit', edit_question_path(question), class:'btn btn-secondary' %>
            <%= link_to 'Destroy', question_path(question), data: {method: :delete, confirm: 'Are you sure?'}, class:'btn btn-danger'  %>
            </div>
        <section>
    <div>
</article>
<% end %>